<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Drogas Vasoactivas"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/pickerPeso"
        android:layout_width="53dp"
        android:layout_height="149dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/pickerSolvente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toEndOf="@+id/pickerSolvente"
        app:layout_constraintTop_toBottomOf="@+id/txPeso"
        app:layout_constraintVertical_bias="0.333" />

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="185dp"
        android:layout_height="148dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texDosis3" />

    <TextView
        android:id="@+id/textml"
        android:layout_width="269dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="ml/hora"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/texDosis"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textml2"
        android:layout_width="270dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="ml/hora"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/texDosis2"
        app:layout_constraintTop_toBottomOf="@+id/textml" />

    <TextView
        android:id="@+id/textml3"
        android:layout_width="267dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="ml/hora"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/texDosis3"
        app:layout_constraintTop_toBottomOf="@+id/textml2" />

    <TextView
        android:id="@+id/textDilusion"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="8dp"
        android:text="DILUSION"
        app:layout_constraintBottom_toTopOf="@+id/pickerSolvente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textml3" />

    <TextView
        android:id="@+id/texDroga"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:text="droga"
        android:textColor="#0C37D5"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/texDosis"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/texDosis2"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texDosis" />

    <TextView
        android:id="@+id/texDosis3"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texDosis2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="52dp"
        android:text="DOSIS"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texDroga" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="52dp"
        android:text="Vel. Infusion"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/texDroga" />

    <TextView
        android:id="@+id/txAmpolla"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:hint="AMP"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/texDroga"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txAmpAtributos"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:text="Dopamina 200 mg/5 cc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texDroga" />

    <NumberPicker
        android:id="@+id/pickerSolvente"
        android:layout_width="99dp"
        android:layout_height="148dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/numberPicker"
        app:layout_constraintStart_toEndOf="@+id/numberPicker"
        app:layout_constraintTop_toBottomOf="@+id/txPeso"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/txPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="PESO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textml3" />

</android.support.constraint.ConstraintLayout>